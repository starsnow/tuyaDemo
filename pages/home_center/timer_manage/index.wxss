/* pages/home_center/timer_manage/index.wxss */
.bottom-view {
  display: flex;
  position: fixed;
  bottom: 0rpx;
  width:100%;
}

.timer_list {
  display: flex;
}

.base-icon-images {
  width: 96rpx;
  height: 96rpx;
}

.root {
  display: flex;
  flex-direction: column;
  padding: 16px 16px;
}

.timer-info-block {
  display: flex;
  padding: 24px 16px;
  background-color: #fff;
  border-radius: 16px;
  margin-bottom: 16px;
  align-items: center;
  flex-direction: column;
  justify-items: left;
  align-items: flex-start;
}

.timer_info_head {
  display: flex;
  margin-bottom: 10rpx;
}

.timer_info_body {
  display: flex;
  align-items:center;
  flex-direction: row;
  justify-content:space-around;
}

.timer_info_body_item {
  display:flex;
}

.timer_settings_line {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
}

.timer_week_text {
  font-size: 70%;
}

.timer_week_text_disabled {
  color: lightgray;
}